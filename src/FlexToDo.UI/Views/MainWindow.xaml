<Window x:Class="FlexToDo.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:FlexToDo.UI.Converters"
        mc:Ignorable="d"
        Title="Flex ToDo"
        Width="{Binding WindowWidth}" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Background="Transparent"
        Left="{Binding WindowLeft}"
        Top="{Binding WindowTop}">

    <Window.Resources>
        
        <!-- è½¬æ¢å™¨ -->
        <converters:TodoItemHoverConverter x:Key="TodoItemHoverConverter"/>
        
        <!-- ç§‘æŠ€æ„Ÿæ‚¬åœé¢œè‰²å®šä¹‰ -->
        <Color x:Key="HoverBackgroundColor">#581c87</Color>
        <Color x:Key="HoverBorderColor">#8b5cf6</Color>
        <Color x:Key="HoverGlowColor">#a855f7</Color>
        
        <SolidColorBrush x:Key="HoverBackgroundBrush" 
                         Color="{StaticResource HoverBackgroundColor}" 
                         Opacity="0.3"/>
        <SolidColorBrush x:Key="HoverBorderBrush" 
                         Color="{StaticResource HoverBorderColor}" 
                         Opacity="0.85"/>
        
        <!-- ç´§æ€¥ç¨‹åº¦é¢œè‰²å®šä¹‰ -->
        <SolidColorBrush x:Key="CriticalBrush" Color="#ef4444"/>
        <SolidColorBrush x:Key="HighBrush" Color="#f97316"/>
        <SolidColorBrush x:Key="MediumBrush" Color="#eab308"/>
        <SolidColorBrush x:Key="LowBrush" Color="#22c55e"/>
        
        <!-- æ¸å˜èƒŒæ™¯ - èƒŒæ™¯æ°´å°æ¨¡å¼ -->
        <LinearGradientBrush x:Key="UrgencyGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ef4444" Offset="0"/>
            <GradientStop Color="#f97316" Offset="0.25"/>
            <GradientStop Color="#eab308" Offset="0.5"/>
            <GradientStop Color="#22c55e" Offset="0.75"/>
            <GradientStop Color="Transparent" Offset="1"/>
        </LinearGradientBrush>

        <!-- äº¤äº’æ¨¡å¼èƒŒæ™¯ -->
        <SolidColorBrush x:Key="InteractionBackgroundBrush" Color="#111827" Opacity="0.85"/>
        <SolidColorBrush x:Key="InteractionBorderBrush" Color="#4B5563" Opacity="0.3"/>

        <!-- æ–‡æœ¬é¢œè‰² -->
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="White" Opacity="0.95"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="White" Opacity="0.7"/>
        <SolidColorBrush x:Key="TextTertiaryBrush" Color="White" Opacity="0.5"/>

        <!-- æŒ‰é’®æ ·å¼ -->
        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="20"/>
            <Setter Property="MinHeight" Value="20"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="4,2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="White" Opacity="0.1"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- å¿«é€Ÿè¾“å…¥æ¡†æ ·å¼ -->
        <Style x:Key="QuickAddTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                        Margin="{TemplateBinding Padding}"
                                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- å¾…åŠžäº‹é¡¹å¡ç‰‡æ ·å¼ -->
        <Style x:Key="TodoItemCardStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="White" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="{StaticResource HoverBackgroundColor}" Opacity="0.2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderBrush">
                        <Setter.Value>
                            <SolidColorBrush Color="{StaticResource HoverBorderColor}" Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
                <!-- å…¨å±€æ‚¬åœé«˜äº®è§¦å‘å™¨ï¼ˆèƒŒæ™¯ç©¿é€æ¨¡å¼ï¼‰ -->
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource TodoItemHoverConverter}">
                            <Binding Path="."/>
                            <Binding Path="DataContext.HoveredTodoItem" RelativeSource="{RelativeSource AncestorType=Window}"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource HoverBorderBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- æ‚¬åœé«˜äº®æ ·å¼ -->
        <Style x:Key="HoveredTodoItemCardStyle" TargetType="Border" BasedOn="{StaticResource TodoItemCardStyle}">
            <Setter Property="Background" Value="{StaticResource HoverBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource HoverBorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>

        <!-- è½¬æ¢å™¨ -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        
    </Window.Resources>

    <!-- ä¸»å®¹å™¨ -->
    <Border Name="MainBorder" CornerRadius="2,0,0,2">
        <Grid>
            
            <!-- åˆ—è¡¨ç•Œé¢ï¼ˆå§‹ç»ˆå¯è§ï¼‰ -->
            <Border Name="InteractionMode"
                    Background="{StaticResource InteractionBackgroundBrush}"
                    CornerRadius="12,0,0,12"
                    BorderBrush="{StaticResource InteractionBorderBrush}"
                    BorderThickness="1">
                
                <Grid Margin="16">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- æ ‡é¢˜æ  -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <TextBlock Text="{Binding HeaderTitle}"
                                  Foreground="{StaticResource TextPrimaryBrush}"
                                  FontSize="14"
                                  FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding HeaderSubtitle}"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  FontSize="11"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- å¾…åŠžåˆ—è¡¨ -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Hidden"
                                  HorizontalScrollBarVisibility="Disabled">
                        
                        <!-- ç´§æ€¥äº‹é¡¹ç»„ -->
                        <StackPanel>
                            <!-- ç´§æ€¥äº‹é¡¹ -->
                            <ItemsControl ItemsSource="{Binding CriticalTodos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TodoItemCardStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- ç´§æ€¥ç¨‹åº¦å›¾æ ‡ -->
                                                <TextBlock Grid.Column="0"
                                                          Text="{Binding UrgencyIcon}"
                                                          FontSize="16"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,8,0"/>
                                                
                                                <!-- äº‹é¡¹å†…å®¹ -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}"
                                                              Foreground="{StaticResource TextPrimaryBrush}"
                                                              FontSize="13"
                                                              TextWrapping="Wrap"
                                                              MaxWidth="180"/>
                                                    <TextBlock Text="{Binding DeadlineText}"
                                                              Foreground="{Binding UrgencyColor}"
                                                              FontSize="11"
                                                              Margin="0,4,0,0"
                                                              Visibility="{Binding Deadline, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </StackPanel>
                                                
                                                <!-- æ“ä½œæŒ‰é’® -->
                                                <StackPanel Grid.Column="2" 
                                                           Orientation="Horizontal" 
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding DataContext.StateController.ShouldShowActionButtons, 
                                                                        RelativeSource={RelativeSource AncestorType=Window}, 
                                                                        Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Button Content="âœ“" 
                                                           Style="{StaticResource SmallButtonStyle}"
                                                           Command="{Binding DataContext.CompleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip="æ ‡è®°å®Œæˆ"/>
                                                    <Button Content="â°" 
                                                           Style="{StaticResource SmallButtonStyle}"
                                                           Command="{Binding DataContext.PostponeCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"
                                                           ToolTip="å»¶æœŸ1å°æ—¶"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- é‡è¦äº‹é¡¹ -->
                            <ItemsControl ItemsSource="{Binding HighTodos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TodoItemCardStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- é‡è¦ç¨‹åº¦å›¾æ ‡ -->
                                                <TextBlock Grid.Column="0"
                                                          Text="{Binding UrgencyIcon}"
                                                          FontSize="16"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,8,0"/>
                                                
                                                <!-- äº‹é¡¹å†…å®¹ -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Title}"
                                                              Foreground="{StaticResource TextPrimaryBrush}"
                                                              FontSize="13"
                                                              TextWrapping="Wrap"
                                                              MaxWidth="180"/>
                                                    <TextBlock Text="{Binding DeadlineText}"
                                                              Foreground="{StaticResource TextSecondaryBrush}"
                                                              FontSize="11"
                                                              Margin="0,4,0,0"
                                                              Visibility="{Binding Deadline, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                </StackPanel>
                                                
                                                <!-- æ“ä½œæŒ‰é’® -->
                                                <StackPanel Grid.Column="2" 
                                                           Orientation="Horizontal" 
                                                           VerticalAlignment="Center"
                                                           Visibility="{Binding DataContext.StateController.ShouldShowActionButtons, 
                                                                        RelativeSource={RelativeSource AncestorType=Window}, 
                                                                        Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <Button Content="âœ“" 
                                                           Style="{StaticResource SmallButtonStyle}"
                                                           Command="{Binding DataContext.CompleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                           CommandParameter="{Binding}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- ä»Šæ—¥å¾…åŠž -->
                            <ItemsControl ItemsSource="{Binding TodayTodos}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource TodoItemCardStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- äº‹é¡¹å†…å®¹ -->
                                                <TextBlock Grid.Column="0"
                                                          Text="{Binding Title}"
                                                          Foreground="{StaticResource TextSecondaryBrush}"
                                                          FontSize="12"
                                                          TextWrapping="Wrap"
                                                          VerticalAlignment="Center"
                                                          MaxWidth="200"/>
                                                
                                                <!-- æ“ä½œæŒ‰é’® -->
                                                <Button Grid.Column="1"
                                                       Content="âœ“" 
                                                       Style="{StaticResource SmallButtonStyle}"
                                                       Visibility="{Binding DataContext.StateController.ShouldShowActionButtons, 
                                                                    RelativeSource={RelativeSource AncestorType=Window}, 
                                                                    Converter={StaticResource BooleanToVisibilityConverter}}"
                                                       Command="{Binding DataContext.CompleteCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                       CommandParameter="{Binding}"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- ç©ºçŠ¶æ€æç¤º -->
                            <Border Visibility="{Binding HasNoTodos, Converter={StaticResource BooleanToVisibilityConverter}}"
                                    Background="{StaticResource InteractionBackgroundBrush}"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,20,0,0">
                                <StackPanel HorizontalAlignment="Center">
                                    <TextBlock Text="ðŸŽ‰" 
                                              FontSize="32" 
                                              HorizontalAlignment="Center"
                                              Margin="0,0,0,8"/>
                                    <TextBlock Text="æš‚æ— å¾…åŠžäº‹é¡¹"
                                              Foreground="{StaticResource TextSecondaryBrush}"
                                              FontSize="14"
                                              HorizontalAlignment="Center"/>
                                    <TextBlock Text="ä½¿ç”¨å¿«é€Ÿæ·»åŠ åŠŸèƒ½åˆ›å»ºæ–°çš„å¾…åŠžäº‹é¡¹"
                                              Foreground="{StaticResource TextTertiaryBrush}"
                                              FontSize="11"
                                              HorizontalAlignment="Center"
                                              Margin="0,4,0,0"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <!-- å¿«é€Ÿæ·»åŠ  -->
                    <Border Grid.Row="2" 
                           Background="{StaticResource InteractionBackgroundBrush}"
                           CornerRadius="8"
                           Padding="12"
                           Margin="0,16,0,0"
                           Visibility="{Binding StateController.ShouldShowInputArea, 
                                        Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- è¾“å…¥æ¡† -->
                            <TextBox Grid.Column="0"
                                    Name="QuickAddTextBox"
                                    Text="{Binding QuickAddText, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource QuickAddTextBoxStyle}"
                                    VerticalAlignment="Center"
                                    GotFocus="QuickAddTextBox_GotFocus"
                                    LostFocus="QuickAddTextBox_LostFocus">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Return" Command="{Binding QuickAddCommand}"/>
                                    <KeyBinding Key="Escape" Command="{Binding CancelCommand}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                            
                            <!-- å ä½ç¬¦æ–‡æœ¬ -->
                            <TextBlock Grid.Column="0"
                                      Text="è¾“å…¥æ–°çš„å¾…åŠžäº‹é¡¹... (Enterä¿å­˜, Escé€€å‡º)"
                                      Foreground="{StaticResource TextTertiaryBrush}"
                                      FontSize="13"
                                      IsHitTestVisible="False"
                                      VerticalAlignment="Center"
                                      Margin="4,0,0,0"
                                      Visibility="{Binding ShouldShowPlaceholder, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            
                            <!-- æ·»åŠ æŒ‰é’® -->
                            <Button Grid.Column="1"
                                   Content="+"
                                   Style="{StaticResource SmallButtonStyle}"
                                   Command="{Binding QuickAddCommand}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   ToolTip="æ·»åŠ å¾…åŠžäº‹é¡¹"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>